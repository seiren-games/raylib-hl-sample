{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: Build debug",
			"command": "MSBuild.exe",
			"args": [
				"-property:Configuration=DEBUG"
			],
			"options": {
				"cwd": "${workspaceFolder}/hashlink-extension"
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"C/C++: Build debug"
			],
			"command": "haxe tests.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "haxe: tests.hxml"
		}
	]
}